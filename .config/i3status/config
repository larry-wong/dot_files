# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "disk /"
order += "disk /mnt/data"
order += "cpu_usage"
order += "volume master"
order += "tztime local"

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

cpu_usage {
	format = "CPU: %usage"
}

volume master {
    format = " %volume"
    format_muted = " %volume"
}

disk "/" {
        format = " %avail"
}

disk "/mnt/data" {
        format = " %avail"
}
